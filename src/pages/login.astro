---
import '@styles/login.css';
import { SignIn, SignOut, Auth, signIn, signOut } from 'auth-astro/components'
import type { Session } from '@auth/core/types';
import AppleIcon from '@assets/apple-icon.svg'
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="../public/favicon.svg" type="image/x-icon" />
  <title>Sign in | CMK</title>
</head>

<div class="container">
  <h1>Welcome Back</h1>
  <Auth>
    {(props: { session: Session }) => (
      <>
        {props.session ? (
          <SignOut onClick={() => signOut()}>Logout</SignOut>
        ) : (
          <SignIn provider="github" onClick={() => signIn("github")}><AppleIcon /></SignIn>
        )}
        <p>
          {props.session ? `Logged in as ${props.session.user?.name}` : 'Not logged in'}
        </p>
      </>
    )}
  </Auth>
  <form action="/api/auth/signin" method="post">
    <label for="email" for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="example@example.com"
    />
    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="***********"/>    
  </form>
  <button id="login">Login Authjs</button>
  <p>Forgot your password? <a href="/forgot">Reset it</a></p>
    <p>New here? <a href="/register">Create an account</a></p>
</div>

<script type="module">
  import { signIn } from 'auth-astro/components';
  document.querySelector("#login").onclick = () => signIn("github");
</script>
