---
import { ArrowRight, Heart, ShoppingBag } from 'lucide-react';
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@/components/ui/card';
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import { getCurrentUser } from '@/lib/auth-server';

const user = await getCurrentUser(Astro.request);

if (!user) {
  return Astro.redirect('/login');
}
---

<DashboardLayout
  title="Dashboard"
  breadcrumb={{
    '/': 'Home',
  }}
>
  <div class="space-y-8">
    <!-- Welcome Section -->
    <div class="space-y-2">
      <h1 class="text-3xl font-bold tracking-tight">
        Welcome back, {user.name}!
      </h1>
      <p class="text-muted-foreground">
        Here's an overview of your account and quick access to your most
        important features.
      </p>
    </div>

    <!-- Quick Actions Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-2">
      <!-- Orders Card -->
      <Card
        className="group relative overflow-hidden transition-all hover:shadow-lg"
      >
        <CardHeader>
          <div
            class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 text-primary transition-colors group-hover:bg-primary/20"
          >
            <ShoppingBag className="size-6" />
          </div>
          <CardTitle className="text-2xl">Orders</CardTitle>
          <CardDescription>
            Check the history of all your orders and their current status
          </CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground">
            View your order history, track shipments, and manage returns all in
            one place.
          </p>
        </CardContent>
        <CardFooter>
          <a
            href="/dashboard/orders"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all h-9 px-4 py-2 bg-primary text-primary-foreground shadow-xs hover:bg-primary/90 w-full group-hover:gap-3"
          >
            View Orders
            <ArrowRight
              className="size-4 transition-transform group-hover:translate-x-1"
            />
          </a>
        </CardFooter>
      </Card>

      <!-- Wishlist Card -->
      <Card
        className="group relative overflow-hidden transition-all hover:shadow-lg"
      >
        <CardHeader>
          <div
            class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-pink-500/10 text-pink-600 dark:text-pink-400 transition-colors group-hover:bg-pink-500/20"
          >
            <Heart className="size-6" />
          </div>
          <CardTitle className="text-2xl">My Wishlist</CardTitle>
          <CardDescription>
            View and manage products in your wishlist
          </CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground">
            Save your favorite products and add them to your cart when you're
            ready to purchase.
          </p>
        </CardContent>
        <CardFooter>
          <a
            href="/dashboard/wishlist"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all h-9 px-4 py-2 bg-primary text-primary-foreground shadow-xs hover:bg-primary/90 w-full group-hover:gap-3"
          >
            View My Wishlist
            <ArrowRight
              className="size-4 transition-transform group-hover:translate-x-1"
            />
          </a>
        </CardFooter>
      </Card>
    </div>

    <!-- Additional Info Section -->
    <Card className="border-dashed">
      <CardHeader>
        <CardTitle className="text-xl">Need Help?</CardTitle>
        <CardDescription>
          We're here to assist you with any questions or concerns
        </CardDescription>
      </CardHeader>
      <CardContent>
        <div class="flex flex-col gap-4 sm:flex-row">
          <a
            href="/dashboard/settings"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all h-9 px-4 py-2 border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 flex-1"
          >
            Account Settings
          </a>
          <a
            href="/support"
            class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all h-9 px-4 py-2 border bg-background shadow-xs hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 flex-1"
          >
            Contact Support
          </a>
        </div>
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
