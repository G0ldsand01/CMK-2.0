---
import { actions } from 'astro:actions';
import CouponsTable from '@/components/admin/coupons/CouponsTable';
import AdminDashboardLayout from '@/layouts/AdminDashboardLayout.astro';
import { getCurrentUser } from '@/lib/auth-server';

const user = await getCurrentUser(Astro.request);

if (!user || user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}

const { data: couponsData, error } = await Astro.callAction(
  actions.admin.coupons.getCoupons,
  { limit: 100 }
);

if (error) {
  console.error('Error fetching coupons:', error);
}

const coupons = couponsData?.data || [];
---
<AdminDashboardLayout
	title="Coupons"
	breadcrumb={{
  '/coupons': 'Manage Coupons',
}}
>
	<div class="space-y-6 p-6">
		<div class="space-y-2">
			<h1 class="text-3xl font-bold tracking-tight">Manage Coupons</h1>
			<p class="text-muted-foreground text-lg">
				Create and manage coupon codes for Stripe checkout
			</p>
		</div>

		<CouponsTable
			client:load
			initialCoupons={JSON.parse(JSON.stringify(coupons))}
		/>
	</div>
</AdminDashboardLayout>
