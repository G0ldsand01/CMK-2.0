---
import ReportsManager from '@/components/admin/reports/ReportsManager';
import AdminDashboardLayout from '@/layouts/AdminDashboardLayout.astro';
import { getCurrentUser } from '@/lib/auth-server';

const user = await getCurrentUser(Astro.request);

if (!user || user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---
<AdminDashboardLayout
	title="Reports"
	breadcrumb={{
  '/reports': 'Reports',
}}
>
	<div class="space-y-6 p-6">
		<div class="space-y-2">
			<h1 class="text-3xl font-bold tracking-tight">Reports</h1>
			<p class="text-muted-foreground text-lg">
				Generate and download business reports
			</p>
		</div>

		<ReportsManager client:load />
	</div>
</AdminDashboardLayout>


