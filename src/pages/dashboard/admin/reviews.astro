---
import { actions } from 'astro:actions';
import ReviewsTable from '@/components/admin/reviews/ReviewsTable';
import AdminDashboardLayout from '@/layouts/AdminDashboardLayout.astro';
import { getCurrentUser } from '@/lib/auth-server';

const user = await getCurrentUser(Astro.request);

if (!user || user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}

const { data: reviewsData, error } = await Astro.callAction(
  actions.admin.reviews.getReviews,
  { limit: 20, offset: 0 }
);

if (error) {
  console.error('Error fetching reviews:', error);
}

const reviews = reviewsData?.data || [];
const totalReviews = reviewsData?.total || 0;
---
<AdminDashboardLayout
	title="Reviews"
	breadcrumb={{
  '/reviews': 'Manage Reviews',
}}
>
	<div class="space-y-4 sm:space-y-6 p-4 sm:p-6">
		<div class="space-y-2">
			<h1 class="text-2xl sm:text-3xl font-bold tracking-tight">Manage Reviews</h1>
			<p class="text-muted-foreground text-sm sm:text-lg">
				View and manage all product reviews from customers
			</p>
		</div>

		<ReviewsTable
			client:load
			initialReviews={JSON.parse(JSON.stringify(reviews))}
			totalReviews={totalReviews}
		/>
	</div>
</AdminDashboardLayout>
