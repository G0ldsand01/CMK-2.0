---
import NotificationsManager from '@/components/admin/notifications/NotificationsManager';
import AdminDashboardLayout from '@/layouts/AdminDashboardLayout.astro';
import { getCurrentUser } from '@/lib/auth-server';

const user = await getCurrentUser(Astro.request);

if (!user || user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---
<AdminDashboardLayout
	title="Notifications"
	breadcrumb={{
  '/notifications': 'Notifications',
}}
>
	<div class="space-y-6 p-6">
		<div class="space-y-2">
			<h1 class="text-3xl font-bold tracking-tight">Manage Notifications</h1>
			<p class="text-muted-foreground text-lg">
				Manage system notifications and alerts for users
			</p>
		</div>

		<NotificationsManager client:load />
	</div>
</AdminDashboardLayout>


