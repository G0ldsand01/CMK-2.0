---
import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { getSession } from "auth-astro/server";
import { Auth, SignOut } from "auth-astro/components";
const session = await getSession(Astro.request);

if (!session || !session.user) {
  return Astro.redirect("/login");
}
---

<DashboardLayout title="Dashboard" activeId="wishlist">
      <div class="content">
        <div class="head">
          <div class="welcome-message">
            <h1>{session.user.name}'s Wishlist</h1>
            <p>Save your favorite products</p>
          </div>
          <div class="whishlist">
            <div class="whishlist-list">
              <div class="whishlist-list-header">                
                <div class="whishlist-list-body">
                  <!-- {whishlist.map((product: { name: string; price: number; quantity: number }) => (
            <div class="whishlist-list-body-item">
              <div class="whishlist-list-body-item-header">
                <h3>{product.name}</h3>
                <p2>Price: ${product.price}</p2>
              </div>
              <div class="whishlist-list-body-item-body">
                <p2>Quantity: {product.quantity}</p2>
                <p2>Total: ${product.price * product.quantity}</p2>
              </div>
            </div>
          ))} -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

</DashboardLayout>
<style>
  /* Content Section */
  .content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Header Styling */
  .head {
    margin-top: 10rem;
    width: 50%;
    background-color: hsla(0, 0%, 20%, 0.274);
    padding: 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 2rem;
    margin-left: auto;
    margin-right: auto;
  }

  .welcome-message h1 {
    color: #27ae60;
    font-size: 28px;
  }

  .welcome-message p {
    color: #000000;
    font-size: 16px;
  }
  /* Responsive Design */
  @media (max-width: 768px) {
    .content {
      padding: 20px;
      text-align: center;
    }

    .head {
      width: 100%;
      padding: 20px;
      border-radius: 1rem;
    }
    .head {
      width: 100%;
      padding: 20px;
      border-radius: 1rem;
      margin-top: 2rem;
    }
    
  }
</style>
